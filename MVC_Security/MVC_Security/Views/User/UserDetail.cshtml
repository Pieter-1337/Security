@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "UserDetail";
}

<h2>Detail van de user<i>@ViewBag.usernaam </i></h2>
<h3>Roles :</h3>

@if (Model.Count != 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rolename</th>
                <th>Delete role for user</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>@Html.ActionLink("Delete","VerwijderRoleForMember", new { userid = ViewBag.userid, roleid = role.Id }, new { @class = "btn btn-danger"})</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{ 
    <p>User @ViewBag.usernaam behoort tot geen enkele rol.</p>
} 
